package gatinho;
import java.util.Scanner;
public class Animal {
	
    Scanner scan = new Scanner(System.in);
    String name;
    int vidas;
    boolean chamego;
    
    void status(){
        System.out.println("O gato quer carinho? Digite 'true' para sim e 'false' para nao");
        chamego = scan.nextBoolean();
    }
            
	
    void miar() {
	if(this.vidas > 0)
            System.out.println("Miau");
	  else
              System.out.println("Gato morreu");
    }

    void fingirDeMorto() {
	this.vidas -= 1;
    }
    
    void carinho(){
        if (this.chamego == true){
        System.out.println("Ronronando");
        }
        else
        {   
            System.out.println("Arranh√£o");
        }
    }
} 

package gatinho;

public class Gatinho {   
    public static void main(String[] args) {
        
        Animal gato = new Animal();
		
            gato.status();
            gato.carinho();
            gato.name = "Magrelo";
            gato.vidas = 7;
            
            for(int i = 0; i < 10; i += 1) {
                gato.miar();
                gato.fingirDeMorto();
            }
        
    }
    
}
